<style>
  #filters {
      display: flex;
      /* display: inline-flex; */
      flex-wrap: nowrap;
      overflow-x: scroll;            /* Scroll enabled */
      padding: 0.2rem;
      scrollbar-width: thin;        /* Firefox */
      -ms-overflow-style: auto;     /* IE and Edge */
      height: 4rem;
      align-items: center;
      /* width: 135vh; */
  }

  /* âœ… Show scrollbar in Chrome, Edge, Safari */
  #filters::-webkit-scrollbar {
      height: 8px; /* visible height */
  }

  #filters::-webkit-scrollbar-track {
      background: #f1f1f1;
  }

  #filters::-webkit-scrollbar-thumb {
      background: #888;
      border-radius: 10px;
  }

  #filters::-webkit-scrollbar-thumb:hover {
      background: #555;
  }

  .filter {
      flex: 0 0 auto;
      text-align: center;
      margin-right: 2rem;
      margin-bottom: none;
      opacity: 0.7;
  }

  .filter:hover {
      opacity: 0.9;
      cursor: pointer;
  }

  .filter p {
      font-size: 0.8rem;
      margin-bottom: 0px;
  }

  .taxt-info{
    display: none;
  }
  .tax-toggle{
    border: 1px solid black;
    border-radius: 1rem;
    height: 2.75rem;
    padding: 1rem;
    margin-left: 5rem;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    min-width: 17rem;
  }

  .filter a{
    text-decoration: none;
    color: #111;
  }
  
</style>

    <body>
       
    <div id="filters">
        <div class="filter">
            <a href="/listings/category?category=Trending">
                <div><i class="fa-solid fa-fire"></i></div>
                <p>Trending</p>
            </a>
        </div>
        <div class="filter">
            <a href="/listings/category?category=Rooms">
            <div><i class="fa-solid fa-bed"></i></div>
            <p>Rooms</p>
            </a>
        </div>
        <div class="filter">
            <a href="/listings/category?category=Iconic Cities">
            <div><i class="fa-solid fa-mountain-city"></i></div>
            <p>Iconic Cities</p>
            </a>
        </div>
        <div class="filter">
            <a href="/listings/category?category=Mountain">
            <div><i class="fa-solid fa-mountain"></i></div>
            <p>Mountain</p>
            </a>
        </div>
        <div class="filter">
            <a href="/listings/category?category=Castles">
            <div><i class="fa-solid fa-fort-awesome"></i></div>
            <p>Castles</p>
            </a>
        </div>
        <div class="filter">
            <a href="/listings/category?category=Amazing pool">
            <div><i class="fa-solid fa-person-swimming"></i></div>
            <p>Amazing pool</p>
            </a>
        </div>
        <div class="filter">
            <a href="/listings/category?category=Camping">
            <div><i class="fa-solid fa-campground"></i></div>
            <p>Camping</p>
            </a>
        </div>
        <div class="filter">
            <a href="/listings/category?category=Farms">
            <div><i class="fa-solid fa-cow"></i></div>
            <p>Farms</p>
            </a>
        </div>
        <div class="filter">
            <a href="/listings/category?category=Arctic">
            <div><i class="fa-solid fa-snowflake"></i></div>
            <p>Arctic</p>
            </a>
        </div>
         <div class="filter">
            <a href="/listings/category?category=Domes">
            <div><i class="fa-solid fa-igloo"></i></div>
            <p>Domes</p>
            </a>
        </div>
         <div class="filter">
            <a href="/listings/category?category=Boats">
            <div><i class="fa-solid fa-ship"></i></div>
            <p>Boats</p>
            </a>
        </div>
       
          <div class="tax-toggle">
            <div class="form-check-reverse form-switch ">
                <input class="form-check-input" type="checkbox" role="switch" id="switchCheckDefault">
                <label class="form-check-label" for="switchCheckDefault">Display total after taxes</label>
            </div>
        </div>
        

    </div>
      
        <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
            <% for(let listing of allListings) {%>
                <a href="/listings/<%= listing._id %>" class="listing-list">
                    <div class="card col listing-card">
                        <img src='<%= listing.image.url %>' class="card-img-top" alt="Listing image" style="height:20rem;">
                        <div class="card-img-overlay"></div>
                        <div class="card-body">
                            <p class="card-text">
                                <b>
                                    <%= listing.title %>
                                </b> <br>
                                &#8377; <%= listing.price.toLocaleString("en-IN") %>/night
                                <i class="taxt-info">&nbsp; &nbsp; + 18%GST</i>
                            </p>
                        </div>
                    </div>
                </a>
                <% } %>
        </div>
    </body>

<script>
    let taxSwitch=document.getElementById("switchCheckDefault");
    taxSwitch.addEventListener('click',()=>{
        let taxInfo=document.getElementsByClassName("taxt-info")
        for(info of taxInfo){
            if(info.style.display!="inline"){
                info.style.display="inline"
            }
            else{
                info.style.display="none"
            }
            
        }
    })
   
</script>